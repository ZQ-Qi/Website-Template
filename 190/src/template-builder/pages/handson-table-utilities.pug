	- var activeMenu   = "handson-table-utilities"



block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"HandsonTable"}, {name:"Utilities"}])



//- Include page content in page block
append content
	include ../contents/handson-table-utilities.html

