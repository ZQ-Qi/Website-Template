extends template

block pageVars
	- var pageTitle   = "Dashboard sales"
	- var activeMenu  = "dashboard-sales"

block page-header

//- Include page content in page block
append content
	include ../contents/dashboard-sales.html

//- Vendor CSS
//------------------------------
//- Add Vendor specific CSS
append vendorcss

//- Page CSS
//------------------------------
//- Add custom page specific CSS
append pagecss
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/charts/jquery-jvectormap-2.0.3.css')
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/charts/morris.css')
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/fonts/simple-line-icons/style.css')
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/css'+rtl+'/core/colors/palette-gradient.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src=app_assets_path + '/vendors/js/charts/chart.min.js', type='text/javascript')
	//- Morris Chart
	script(src=app_assets_path + '/vendors/js/charts/raphael-min.js', type='text/javascript')
	script(src=app_assets_path + '/vendors/js/charts/morris.min.js', type='text/javascript')
	//- Vector Maps
	script(src=app_assets_path + '/vendors/js/charts/jvector/jquery-jvectormap-2.0.3.min.js', type='text/javascript')
	script(src=app_assets_path + '/vendors/js/charts/jvector/jquery-jvectormap-world-mill.js', type='text/javascript')
	script(src=app_assets_path + '/data/jvector/visitor-data.js', type='text/javascript')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	//- Dashboard custom js
	script(src=app_assets_path + '/js/scripts/pages/dashboard-sales.js', type='text/javascript')