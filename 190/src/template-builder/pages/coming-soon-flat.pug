extends template

block pageVars
	- var pageTitle    = "Coming Soon Flat"
	- var description  = "Temporary text"
	- var activeMenu   = "coming-soon-flat"

append pageConfig
	- var contentLayout = '1-column'
	- var blankPage = true
	- var navbarFixed = false
	- var bodyCustom = 'comingsoonFlat'
	- var centerLayout = false

//- Include page content in page block
append content
	include ../contents/coming-soon-flat.html

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src=app_assets_path + '/vendors/js/coming-soon/jquery.countdown.min.js', type='text/javascript')

//- Page CSS
//------------------------------
//- Add custom page specific CSS
append pagecss
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/css'+rtl+'/pages/coming-soon.css')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(src=app_assets_path + '/js/scripts/coming-soon/coming-soon.js', type='text/javascript')