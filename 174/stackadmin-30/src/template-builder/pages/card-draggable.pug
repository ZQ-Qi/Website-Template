extends template

block pageVars
	- var pageTitle = "Draggable Cards"
	- var pageSubTitle = "Draggable Cards Options"
	- var description  = "A card is a flexible and extensible content container. It includes options for headers and footers, a wide variety of content, contextual background colors, and powerful display options. Cards require a small amount of markup and classes to provide you with as much control as possible. These classes and markup are flexible though and can typically be remixed and extended with ease."
	- var activeMenu = "card-draggable"

block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Form Components"}, {name:"Draggable Cards"}])

//- Include page content in page block
append content
	include ../contents/card-draggable.html

//- Vendor CSS
//------------------------------
//- Add vendor specific CSS
append vendorcss
	link(rel='stylesheet', type='text/css', href=app_assets_path+'/vendors/css/ui/dragula.min.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src=app_assets_path+'/vendors/js/extensions/dragula.min.js', type='text/javascript')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(src=app_assets_path+'/js/scripts/cards/draggable.js', type='text/javascript')