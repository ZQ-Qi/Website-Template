extends template

block pageVars
	- var pageTitle    = "D3 Bar Chart"
	- var pageSubTitle = "D3 bar chart examples"
	- var description  = "A diagram in which the numerical values of variables are represented by the height or length of lines or rectangles of equal width."
	- var activeMenu   = "d3-bar-chart"



block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"D3 Charts"}, {name:"Bar Chart"}])

//- Include page content in page block
append content
	include ../contents/d3-bar-chart.html

//- Vendor CSS
//------------------------------
//- Add vendor specific CSS
append vendorcss
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/charts/d3.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src=app_assets_path + '/vendors/js/charts/d3.min.js', type='text/javascript')
	script(src=app_assets_path + '/vendors/js/charts/d3.tip.js', type='text/javascript')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(src=app_assets_path + '/js/scripts/charts/d3/bar/bar.js', type='text/javascript')
	script(src=app_assets_path + '/js/scripts/charts/d3/bar/bar-negative.js', type='text/javascript')
	script(src=app_assets_path + '/js/scripts/charts/d3/bar/grouped-bar.js', type='text/javascript')
	script(src=app_assets_path + '/js/scripts/charts/d3/bar/normalized-stacked-bar.js', type='text/javascript')
	script(src=app_assets_path + '/js/scripts/charts/d3/bar/stacked-bar.js', type='text/javascript')
	script(src=app_assets_path + '/js/scripts/charts/d3/bar/stacked-to-grouped.js', type='text/javascript')
	script(src=app_assets_path + '/js/scripts/charts/d3/bar/stacked-to-multiples.js', type='text/javascript')
	script(src=app_assets_path + '/js/scripts/charts/d3/bar/waterfall.js', type='text/javascript')