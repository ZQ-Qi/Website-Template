extends template

block pageVars
	- var pageTitle = "Extended Controls"
	- var pageSubTitle = "Extended Controls with diffrent elements and styles."
	- var description  = "Extend form controls using some plugins."
	- var activeMenu = "form-extended-inputs"

block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Form Components"}, {name:"Extended Controls"}])

//- Include page content in page block
append content
	include ../contents/form-extended-inputs.html

append pagecss
	//- Form Extended CSS
	link(rel='stylesheet', type='text/css', href=app_assets_path+'/css'+rtl+'/plugins/forms/extended/form-extended.css')

append vendorjs
	//- Typeahead
	script(src=app_assets_path+'/vendors/js/forms/extended/typeahead/typeahead.bundle.min.js', type='text/javascript')
	script(src=app_assets_path+'/vendors/js/forms/extended/typeahead/bloodhound.min.js', type='text/javascript')
	script(src=app_assets_path+'/vendors/js/forms/extended/typeahead/handlebars.js', type='text/javascript')

	//- Input Mask
	script(src=app_assets_path+'/vendors/js/forms/extended/inputmask/jquery.inputmask.bundle.min.js', type='text/javascript')

	//- Max Length
	script(src=app_assets_path+'/vendors/js/forms/extended/maxlength/bootstrap-maxlength.js', type='text/javascript')

append pagejs
	//- Typeahead
	script(src=app_assets_path+'/js/scripts/forms/extended/form-typeahead.js', type='text/javascript')

	//- Input Mask
	script(src=app_assets_path+'/js/scripts/forms/extended/form-inputmask.js', type='text/javascript')

	//- Max Length
	script(src=app_assets_path+'/js/scripts/forms/extended/form-maxlength.js', type='text/javascript')