extends template

block pageVars
	- var pageTitle    = "Fixed Top"
	- var pageSubTitle = "Fixed top navbar"
	- var description  = "The Fixed top navbar options used to make your navbar set to be fixed at top."
	- var activeMenu   = "fixed-top"

append navbarConfig
	- var navbarPosition = "fixed-top"

block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Navbars"}, {name:"Fixed Top"}])

//- Include page content in page block
append content
	include ../contents/navbar-fixed-top.html

//- Vendor CSS
//------------------------------
//- Add Vendor specific CSS
append vendorcss
	link(rel='stylesheet', type='text/css', href=app_assets_path+'/vendors/css/ui/prism.min.css')

//- Page CSS
//------------------------------
//- Add custom page specific CSS
append pagecss

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(type='text/javascript', src=app_assets_path+'/vendors/js/ui/prism.min.js')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs