extends template

block pageVars
	- var pageTitle    = "Toolbar"
	- var pageSubTitle = "Tooltip style toolbars"
	- var description  = "Toolbar allows you to quickly create tooltip style toolbars for use in web applications and websites. The toolbar is easily customisable using icons and provides flexibility around the toolbars display and number of icons."
	- var activeMenu   = "ex-component-toolbar"



block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Extra Components"}, {name:"Toolbar"}])



//- Include page content in page block
append content
	include ../contents/ex-component-toolbar.html

//- Vendor CSS
//------------------------------
//- Add vendor specific CSS
append vendorcss
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/extensions/jquery.toolbar.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src=app_assets_path + '/vendors/js/extensions/jquery.toolbar.min.js', type='text/javascript')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(src=app_assets_path + '/js/scripts/extensions/toolbar.js', type='text/javascript')