extends template

block pageVars
	- var pageTitle    = "Morris Charts"
	- var pageSubTitle = "good-looking charts shouldn't be difficult"
	- var description  = "Create good looking charts using morris chart library"
	- var activeMenu   = "morris-charts"



block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"}, {name:"Morris Charts"}])



//- Include page content in page block
append content
	include ../contents/morris-charts.html

//- Vendor CSS
//------------------------------
//- Add vendor specific CSS
append vendorcss
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/charts/morris.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src=app_assets_path + '/vendors/js/charts/raphael-min.js', type='text/javascript')
	script(src=app_assets_path + '/vendors/js/charts/morris.min.js', type='text/javascript')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(src=app_assets_path + '/js/scripts/charts/morris/line.js', type='text/javascript')
	script(src=app_assets_path + '/js/scripts/charts/morris/smooth-line.js', type='text/javascript')
	script(src=app_assets_path + '/js/scripts/charts/morris/area.js', type='text/javascript')
	script(src=app_assets_path + '/js/scripts/charts/morris/smooth-area.js', type='text/javascript')
	script(src=app_assets_path + '/js/scripts/charts/morris/bar.js', type='text/javascript')
	script(src=app_assets_path + '/js/scripts/charts/morris/donut.js', type='text/javascript')