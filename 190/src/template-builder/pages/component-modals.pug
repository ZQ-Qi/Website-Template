extends template

block pageVars
	- var pageTitle = "Modal"
	- var pageSubTitle = "Modals is a dialog box/popup"
	- var description  = "Modals are streamlined, but flexible, dialog prompts with the minimum required functionality and smart defaults."
	- var activeMenu = "component-modals"



block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Components"}, {name:"Modal"}])

//- Include page content in page block
append content
	include ../contents/component-modals.html

append vendorcss
	//- Select2 CSS
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/forms/selects/select2.min.css')

append vendorjs
