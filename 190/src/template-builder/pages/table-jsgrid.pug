extends template

block pageVars
	- var pageTitle    = "jsGrid"
	- var pageSubTitle = "Lightweight client-side data grid control based on jQuery"
	- var description  = "jsGrid supports basic grid operations like inserting, filtering, editing, deleting, paging, and sorting. jsGrid is flexible and allows to customize its appearance and components."
	- var activeMenu   = "table-jsgrid"



block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"jsGrid"}, {name:"jsGrid"}])


//- Include page content in page block
append content
	include ../contents/table-jsgrid.html

//- Page specific dependency
//------------------------------

//- Add custom page specific CSS
append vendorcss
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/tables/jsgrid/jsgrid-theme.min.css')
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/tables/jsgrid/jsgrid.min.css')

//- Add custom page specific JS
append vendorjs
	script(src=app_assets_path + '/vendors/js/tables/jsgrid/jsgrid.min.js', type='text/javascript')
	script(src=app_assets_path + '/vendors/js/tables/jsgrid/griddata.js', type='text/javascript')

append pagejs
	//-Custom JS
	script(src=app_assets_path + '/js/scripts/tables/jsgrid/jsgrid.js', type='text/javascript')