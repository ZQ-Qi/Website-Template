extends template

block pageVars
	- var pageTitle    = "Error 403"
	- var pageSubTitle = "Access Denied/Forbidden !"
	- var description  = "Error 403 - Access Denied/Forbidden !"
	- var activeMenu   = "error-403-with-navbar"

append pageConfig
	- var contentLayout = "1-column"
	- var logoType = "light"
	- var bodyCustom = "bg-cyan bg-lighten-2"
	- var headerType = "header-simple"
	- var navbarFixed = true
	- var centerLayout = false

append navbarConfig
	- var navbarPosition = "fixed-top"
	- var navbarColor = "navbar-dark"

append footerConfig
	- var footerType = "navbar-fixed-bottom"
	- var footerColor = "footer-dark"

block page-header

//- Include page content in page block
append content
	include ../contents/error-403-with-navbar.html

