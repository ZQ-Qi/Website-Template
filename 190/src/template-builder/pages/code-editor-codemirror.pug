extends template

block pageVars
	- var pageTitle = "CodeMirror"
	- var pageSubTitle = "An embeddable code editor written in JavaScript."
	- var description  = "CodeMirror is a versatile text editor implemented in JavaScript for the browser. It is specialized for editing code, and comes with a number of language modes and addons that implement more advanced editing functionality."
	- var activeMenu = "code-editor-codemirror"



block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Editors"}, {name:"CodeMirror"}])

//- Include page content in page block
append content
	include ../contents/code-editor-codemirror.html

//- Vendor CSS
//------------------------------
//- Add Vendor specific CSS
append vendorcss
	//- Basic CodeMirror CSS
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/editors/codemirror.css')
	//- CodeMirror More CSS
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/editors/theme/monokai.css')
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/editors/theme/night.css')
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/editors/addon/fold/foldgutter.css')
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/editors/addon/dialog/dialog.css')
	link(rel='stylesheet', type='text/css', title="theme", href=app_assets_path + '/vendors/css/editors/theme/3024-day.css')


//- Vendor JS
//------------------------------
//- Add vendor specific JS
