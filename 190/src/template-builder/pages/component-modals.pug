	script(src=app_assets_path + '/vendors/js/forms/select/select2.full.min.js', type='text/javascript')
		
append pagecss
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/css'+rtl+'/plugins/animate/animate.css')

append pagejs
	//- Template js file
	script(src=app_assets_path + '/js/scripts/forms/select/form-select2.js', type='text/javascript')
	script(src=app_assets_path + '/js/scripts/modal/components-modal.js', type='text/javascript')