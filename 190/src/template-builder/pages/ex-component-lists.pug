extends template

block pageVars
	- var pageTitle    = "List JS"
	- var pageSubTitle = "Add search, sort, filters and flexibility to tables & lists"
	- var description  = "Tiny, invisible and simple, yet powerful and incredibly fast vanilla JavaScript that adds search, sort, filters and flexibility to plain HTML lists, tables, or anything."
	- var activeMenu   = "ex-component-lists"



block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Extra Components"}, {name:"List JS"}])



//- Include page content in page block
append content
	include ../contents/ex-component-lists.html

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src=app_assets_path + '/vendors/js/extensions/listjs/list.min.js', type='text/javascript')
	script(src=app_assets_path + '/vendors/js/extensions/listjs/list.fuzzysearch.min.js', type='text/javascript')
	script(src=app_assets_path + '/vendors/js/extensions/listjs/list.pagination.min.js', type='text/javascript')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(src=app_assets_path + '/js/scripts/extensions/list.js', type='text/javascript')