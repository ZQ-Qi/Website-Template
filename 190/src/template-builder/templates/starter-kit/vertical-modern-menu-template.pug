extends ../../base

//- Template customization
//------------------------
block templateConfig
	- var templateCustom = "vertical-layout vertical-menu-modern"
	- var dataMenu = "vertical-menu-modern"

//- Page level customization
//------------------------
block pageConfig
	- var logoType = 'light'

block navbarConfig
	- var navbarPosition = "fixed-top"
	- var navbarColor = "navbar-semi-dark"
	- var navbarShadow = true	

block verticalMenuConfig
	- var menuType = "menu-fixed"
	- var menuColor = "menu-dark"
	- var menuOpenType = "menu-accordion"
	- var menuShadow = true
	- var menuCollapsed = false

block footerConfig
	- var footerType = "footer-static"
	- var footerColor = "footer-light"
	- var footerShadow = true
	- var footerBorder = true

//- Template includes
//-------------------

block header
	if(headerType == 'back-sk-header')
		include ../../templates/sections/header/back-sk-header
	else
		include ../../templates/sections/header/sk-modern-header

block main-menu
	include ../sections/menu/starter-kit/vertical-modern-menu

block page-header
	if blankPage != true
		include ../../pages/page-headers/breadcrumbs-new

block footer
	include ../sections/footer/footer

