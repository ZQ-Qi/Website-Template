extends template

block pageVars
	- var pageTitle    = "noUiSlider"
	- var pageSubTitle = "javaScript range slider library"
	- var description  = "noUiSlider is a lightweight JavaScript range slider library. It offers a wide selection of options and settings, and is compatible with a ton of (touch) devices, including those running iOS, Android, Windows 8/8.1/10, Windows Phone 8.1 and Windows Mobile 10."
	- var activeMenu   = "ex-component-noui-slider"

block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Extra Components"}, {name:"noUiSlider"}])//- Include page content in page block
append content
	include ../contents/ex-component-noui-slider.html

//- Vendor CSS
//------------------------------
//- Add vendor specific CSS
append vendorcss
	link(rel='stylesheet', type='text/css', href=app_assets_path+'/vendors/css/extensions/nouislider.min.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src=app_assets_path+'/vendors/js/extensions/wNumb.js', type='text/javascript')
	script(src=app_assets_path+'/vendors/js/extensions/nouislider.min.js', type='text/javascript')

//- Page CSS
//------------------------------
//- Add page specific CSS
append pagecss
	link(rel='stylesheet', type='text/css', href=app_assets_path+'/css'+rtl+'/plugins/extensions/noui-slider.css')
	link(rel='stylesheet', type='text/css', href=app_assets_path+'/css'+rtl+'/core/colors/palette-noui.css')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(src=app_assets_path+'/js/scripts/extensions/noui-slider.js', type='text/javascript')