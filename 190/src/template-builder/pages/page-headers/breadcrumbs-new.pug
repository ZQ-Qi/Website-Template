        a.dropdown-item(href='#')
          i.la.la-calendar-check-o
          |  Calender
        a.dropdown-item(href='#')
          i.la.la-cart-plus
          |  Cart
        a.dropdown-item(href='#')
          i.la.la-life-ring
          |  Support
        .dropdown-divider
        a.dropdown-item(href='#')
          i.la.la-cog
          |  Settings
