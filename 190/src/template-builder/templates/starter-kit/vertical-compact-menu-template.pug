extends ../../base

//- Template customization
//------------------------
block templateConfig
	- var templateCustom = "vertical-layout vertical-compact-menu"
	- var dataMenu = "vertical-compact-menu"

//- Page level customization
//------------------------
block pageConfig
	- var logoType = 'light'

block navbarConfig
	- var navbarPosition = "fixed-top"
	- var navbarColor = "navbar-dark bg-cyan"
	- var navbarBrandCenter = true
	- var navbarShadow = true	

block verticalMenuConfig
	- var menuType = "menu-fixed"
	- var menuColor = "menu-light"
	- var menuOpenType = "menu-accordion"
	- var menuShadow = true

block footerConfig
	- var footerType = "footer-static"
	- var footerColor = "footer-dark"
	- var footerBorder = true
	- var footerShadow = true	

//- Template includes
//-------------------
block header
	include ../sections/header/sk-header

block main-menu
	include ../sections/menu/starter-kit/vertical-compact-menu

block page-header
	if blankPage != true
		include ../../pages/page-headers/breadcrumbs-with-button

block footer
	include ../sections/footer/footer

