extends template

block pageVars
	- var pageTitle    = "C3 Bar & Pie Chart"
	- var pageSubTitle = "c3 bar & pie chart examples"
	- var description  = "A diagram in which the numerical values of variables are represented by the height or length of lines or rectangles of equal width."
	- var activeMenu   = "c3-bar-pie-chart"



block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"C3 Charts"}, {name:"Bar & Pie Chart"}])

//- Include page content in page block
append content
	include ../contents/c3-bar-pie-chart.html

//- Vendor CSS
//------------------------------
//- Add vendor specific CSS
append vendorcss
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/charts/c3.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src=app_assets_path + '/vendors/js/charts/d3.min.js', type='text/javascript')
	script(src=app_assets_path + '/vendors/js/charts/c3.min.js', type='text/javascript')

//- Page CSS
//------------------------------
//- Add page specific CSS
append pagecss
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/css'+rtl+'/plugins/charts/c3-chart.css')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(src=app_assets_path + '/js/scripts/charts/c3/bar-pie/bar.js', type='text/javascript')
	script(src=app_assets_path + '/js/scripts/charts/c3/bar-pie/column.js', type='text/javascript')
	script(src=app_assets_path + '/js/scripts/charts/c3/bar-pie/donut.js', type='text/javascript')
	script(src=app_assets_path + '/js/scripts/charts/c3/bar-pie/pie.js', type='text/javascript')
	script(src=app_assets_path + '/js/scripts/charts/c3/bar-pie/stacked-bar.js', type='text/javascript')
	script(src=app_assets_path + '/js/scripts/charts/c3/bar-pie/stacked-column.js', type='text/javascript')