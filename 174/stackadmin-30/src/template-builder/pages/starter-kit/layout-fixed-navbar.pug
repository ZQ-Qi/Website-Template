extends template

block pageVars
	- var pageTitle    = "Fixed Navbar"
	- var pageSubTitle = "Fixed navbar with fixed navigation"
	- var description  = "Fixed navbar page structure have fixed navbar, static navigation and footer."
	- var activeMenu   = "fixed-navbar"



append pageConfig
	- var headerType = 'sk-header'
	- var starterKit  = true

append navbarConfig
	- var navbarPosition = "fixed-top"
	- var navbarHideOnScroll = false

block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Starters Kit"}, {name:"Fixed Navbar"}])

//- include  page content in page block
append content
	include ../../contents/starter-kit/starter-page-content.html