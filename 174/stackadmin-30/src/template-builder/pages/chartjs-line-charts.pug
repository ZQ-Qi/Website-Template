extends template

block pageVars
	- var pageTitle    = "Chartjs Line Chart"
	- var pageSubTitle = "chartjs line chart examples"
	- var description  = "A line chart or line graph is a type of chart which displays information as a series of data points called 'markers' connected by straight line segments."
	- var activeMenu   = "chartjs-line-charts"

block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Chartjs"}, {name:"Line Chart"}])

//- Include page content in page block
append content
	include ../contents/chartjs-line-charts.html

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src=app_assets_path+'/vendors/js/charts/chart.min.js', type='text/javascript')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(src=app_assets_path+'/js/scripts/charts/chartjs/line/line.js', type='text/javascript')
	script(src=app_assets_path+'/js/scripts/charts/chartjs/line/line-area.js', type='text/javascript')
	script(src=app_assets_path+'/js/scripts/charts/chartjs/line/line-logarithmic.js', type='text/javascript')
	script(src=app_assets_path+'/js/scripts/charts/chartjs/line/line-multi-axis.js', type='text/javascript')
	script(src=app_assets_path+'/js/scripts/charts/chartjs/line/line-skip-points.js', type='text/javascript')
	script(src=app_assets_path+'/js/scripts/charts/chartjs/line/line-stacked-area.js', type='text/javascript')