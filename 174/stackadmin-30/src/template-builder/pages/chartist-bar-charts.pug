extends template

block pageVars
	- var pageTitle    = "Chartist bar chart"
	- var pageSubTitle = "Chartist bar chart examples"
	- var description  = "A diagram in which the numerical values of variables are represented by the height or length of lines or rectangles of equal width."
	- var activeMenu   = "chartist-bar-charts"

block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Chartist Charts"}, {name:"Chartist bar chart"}])

//- Include page content in page block
append content
	include ../contents/chartist-bar-charts.html

//- Vendor CSS
//------------------------------
//- Add vendor specific CSS
append vendorcss
	link(rel='stylesheet', type='text/css', href=app_assets_path+'/vendors/css/charts/chartist.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src=app_assets_path+'/vendors/js/charts/chartist.min.js', type='text/javascript')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(src=app_assets_path+'/js/scripts/charts/chartist/bar/bi-polar-bar.js', type='text/javascript')
	script(src=app_assets_path+'/js/scripts/charts/chartist/bar/distributed-series.js', type='text/javascript')
	script(src=app_assets_path+'/js/scripts/charts/chartist/bar/horizontal-bar.js', type='text/javascript')
	script(src=app_assets_path+'/js/scripts/charts/chartist/bar/multi-column.js', type='text/javascript')
	script(src=app_assets_path+'/js/scripts/charts/chartist/bar/peak-circles.js', type='text/javascript')
	script(src=app_assets_path+'/js/scripts/charts/chartist/bar/stacked-bar.js', type='text/javascript')